
@{
    Layout = null;
}

<html lang="en">
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @{
        var obj = Session["Title"];
        if (obj != null)
        {
            if (!string.IsNullOrEmpty(Session["Title"].ToString()))
            {
                <title>@Session["Title"].ToString()</title>
            }
            else
            {
                <title>Katarbet Discount</title>
            }
        }
        else
        {
            <title>Katarbet Discount</title>
        }
    }
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;600;700&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/assets/frameworks/public/css/style.css")">
    <link rel="stylesheet" href="@Url.Content("~/assets/frameworks/public/css/media.css")">
    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/favicon.png")">
</head>

<body>
    <div class="table">
        <div class="table-cell">
            <div class="container">
                <div class="main-box">
                    <div class="header-box">
                        <img src="@Url.Content("~/assets/frameworks/public/images/logo.png")">
                    </div><!-- Center Box -->
                    <div class="center-box d-flex align-items-center congratulation">
                        <div class="center-box-inner">
                            <div class="default text-center">
                                <img src="@Url.Content("~/assets/frameworks/public/images/congratulation.png")" class="icon">
                                <h2>Tebrikler!</h2>
                                <p>Discount talebiniz alınmıştır. En kısa süre içerisinde talebiniz değerlendirilerek hakkınız olması durumunda bonusunuz eklenecektir.</p>
                                <a href="@Url.Action("Index","Home")" class="custom-btn">ANASAYFAYA DÖN</a>
                                <br />
                                @*<p>@Session["payresponse"].ToString()</p>*@
                            </div>
                        </div>
                    </div><!-- Footer Box -->
                    <div class="footer-box">
                        <div class="footer-box-inner">

                            <div class="foot-link">
                                <a href="https://t2m.io/katarbet" target="_blank"><img src="@Url.Content("~/assets/frameworks/public/images/home.png")"></a>
                            </div>
                            <div class="foot-link">
                                <a href="https://twitter.com/poligonbet1" target="_blank"><img src="@Url.Content("~/assets/frameworks/public/images/twitter.png")"></a>
                            </div>
                            <div class="foot-link">
                                <a href="https://t.me/poligonbet" target="_blank"><img src="@Url.Content("~/assets/frameworks/public/images/submit.png")"></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    <script src="@Url.Content("~/assets/frameworks/public/js/jquery-3.5.1.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/assets/frameworks/public/js/jquery.validate.min.js")"></script>

    <script src="@Url.Content("~/assets/frameworks/public/js/contactf9e3.js")"></script>


</body>
</html>
